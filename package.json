{
  "name": "@codacy/styleguide",
  "version": "1.0.0",
  "description": "Codacy Styleguide Monorepo",
  "private": true,
  "repository": "git+https://github.com/codacy/styleguide.git",
  "author": "Rodrigo Fernandes <rodrigo@codacy.com>",
  "scripts": {
    "bolt": "bolt",
    "bolt:install": "bolt install",
    "bolt:version": "bolt w @codacy/react-components yarn version --non-interactive --no-git-tag-version --no-commit-hooks --new-version $(cat .version) && bolt w @codacy/stylesheets yarn version --non-interactive --no-git-tag-version --no-commit-hooks --new-version $(cat .version) && git add -A . && git commit -m \"Releasing version $(cat .version)\" && git tag $(cat .version)",
    "bolt:publish": "bolt w @codacy/react-components yarn publish --non-interactive --new-version $(cat .version) && bolt w @codacy/stylesheets yarn publish --non-interactive --new-version $(cat .version)",
    "build": "concurrently 'npm:build:components' 'npm:build:stylesheets' 'npm:build:website' 'npm:build:website-legacy'",
    "build:components": "bolt w @codacy/react-components run build",
    "build:stylesheets": "bolt w @codacy/stylesheets run build",
    "build:website": "bolt w @codacy/react-styleguide-website run build",
    "build:website-legacy": "bolt w @codacy/styleguide-website-legacy run build",
    "watch:components": "sane 'yarn run build:components' components --watchman --glob='**/*.*' --ignored='build/**'",
    "watch:stylesheets": "sane 'yarn run build:stylesheets' stylesheets --watchman --glob='**/*.*' --ignored='dist/**'",
    "start:website": "bolt w @codacy/react-styleguide-website run start",
    "start:website-legacy": "bolt w @codacy/styleguide-website-legacy run start",
    "watch:website": "concurrently 'npm:watch:components' 'npm:watch:stylesheets' 'npm:start:website'",
    "watch:website-legacy": "concurrently 'npm:watch:stylesheets' 'npm:start:website-legacy'"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.1.5",
    "@testing-library/react": "^8.0.4",
    "@types/jest": "24.0.15",
    "@types/node": "^12.0.12",
    "@types/prettier": "^1.16.4",
    "@types/react": "^16.8.23",
    "@types/react-bootstrap": "^0.32.19",
    "@types/react-dom": "^16.8.4",
    "@types/react-select": "^3.0.0",
    "fuse.js": "^3.4.5",
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/react-fontawesome": "^0.1.4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "fs-extra": "^8.1.0",
    "grunt": "^1.0.4",
    "grunt-cli": "^1.3.2",
    "grunt-contrib-compass": "^1.1.1 ",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-connect": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-imagemin": "^3.1.0",
    "grunt-contrib-nodeunit": "^2.0.0",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-uglify": "^4.0.1",
    "grunt-contrib-watch": "^1.0.0",
    "jest": "24.7.1",
    "jest-dom": "^3.5.0",
    "lint-staged": "^9.0.2",
    "nan": "^2.14.0",
    "np": "^5.0.3",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.8.6",
    "react-element-to-jsx-string": "^14.0.2",
    "react-fast-highlight": "^2.2.2",
    "react-scripts": "3.0.1",
    "react-select": "^3.0.4",
    "rimraf": "^2.6.3",
    "ruby-sass": "0.0.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "bolt": "^0.23.5",
    "sane": "4.1.0",
    "concurrently": "4.1.1"
  },
  "bolt": {
    "workspaces": [
      "components",
      "stylesheets",
      "website",
      "website-legacy",
      "build/*"
    ]
  }
}